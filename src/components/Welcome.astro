---
import Layout from '../layouts/Layout.astro';
import { Card } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Github, ExternalLink, Code, Briefcase, Cpu, GraduationCap } from 'lucide-react';

import background from '../assets/background.png';
const projects = [
  {
    title: 'Lyra App E.R.P',
    description: 'Aplicación full-stack para gestión de recursos empresariales con autenticación y base de datos.',
    tags: ['React', 'Node.js', 'PostgreSQL', 'Tailwind'],
    image: '/images/project1.jpg',
    github: 'https://github.com/Not-Minimal/lyra-app',
    demo: 'https://lyra-app.cl'
  },
  {
    title: 'E-commerce Platform',
    description: 'Plataforma de comercio electrónico con panel de administración.',
    tags: ['Astro.build', 'Javascript', 'Cosmic SDK'],
    image: '/images/project2.jpg',
    github: 'https://github.com/Not-Minimal/Repuestos_Moraga-PW-',
    demo: 'https://project2.demo.com'
  },
  {
    title: 'Dashboard Autotruck Diesel SpA',
    description: 'Dashboard interactivo con visualización de datos y reportes en tiempo real.',
    tags: ['Looker Studio', 'Dart', 'Firebase', 'Tailwind'],
    image: '/images/project3.jpg',
    github: 'https://github.com/Not-Minimal/Autotruck-Diesel',
    demo: 'https://project3.demo.com'
  }
];

const skills = [
  { name: 'Frontend', items: ['React', 'Javascript', 'Dart', 'TypeScript', 'Tailwind CSS'] },
  { name: 'Backend', items: ['Node.js', 'Express', 'SQL', 'MongoDB', 'PostgreSQL'] },
  { name: 'DevOps', items: ['Docker', 'RedHat', 'CI/CD', 'Google WorkSpace'] }
];
---

<Layout title="Portfolio | Desarrollador de Software">
  <main>
    <!-- Hero Section with Background -->
    <section class="relative min-h-screen flex items-center justify-center">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-black/70 z-10"></div>
        <img 
          src={background.src}
          alt="Background" 
          class="w-full h-full object-cover"
        />
      </div>
      
      <div class="container mx-auto px-4 z-20 text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 glitch-text">NOTMINIMAL</h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Desarrollador de Software Full-Stack especializado en crear experiencias digitales excepcionales
        </p>
        <div class="flex gap-4 justify-center">
          <Button client:load variant="default" size="lg" class="gap-2">
            <a href="#Projects" class="flex items-center gap-2">
              <Briefcase className="w-5 h-5" />
              Proyectos
            </a>
          </Button>
          <Button client:load variant="outline" size="lg" class="gap-2">
            <a href="https://github.com/Not-Minimal" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2">
              <Github className="w-5 h-5" />
              GitHub
            </a>
          </Button>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
<section id="Projects"class="py-20 bg-black">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-12 text-center">Mis Proyectos</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {projects.map(project => (
            <Card client:load className="bg-zinc-900 border-zinc-800 overflow-hidden hover:border-primary/50 transition-all duration-300">
              <div class="h-48 overflow-hidden">
                <img 
                  src={project.image || "/placeholder.svg"} 
                  alt={project.title} 
                  class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{project.title}</h3>
                <p class="text-gray-200 mb-4">{project.description}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.tags.map(tag => (
                    <a client:load variant="secondary">{tag}</a>
                  ))}
                </div>
                <div class="flex gap-3">
                  <Button client:load variant="outline" size="sm" className="gap-2">
                    <Github className="w-4 h-4" />
                    Código
                  </Button>
                  <Button client:load variant="default" size="sm" className="gap-2">
                    <ExternalLink className="w-4 h-4" />
                    Demo
                  </Button>
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-20 bg-zinc-950">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-12 text-center">Habilidades Técnicas</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {skills.map(category => (
            <Card client:load className="bg-zinc-900 border-zinc-800 hover:border-primary/50 transition-all duration-300">
              <div class="p-6">
                <div class="flex items-center gap-3 mb-4">
                  {category.name === 'Frontend' && <Code className="w-6 h-6 text-primary" />}
                  {category.name === 'Backend' && <Cpu className="w-6 h-6 text-primary" />}
                  {category.name === 'DevOps' && <GraduationCap className="w-6 h-6 text-primary" />}
                  <h3 class="text-xl font-bold text-white">{category.name}</h3>
                </div>
                <div class="flex flex-wrap gap-2">
                  {category.items.map(skill => (
                    <a client:load variant="default" className="text-white bg">{skill}</a>
                  ))}
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 bg-black">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">¿Interesado en trabajar juntos?</h2>
        <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
          Estoy disponible para proyectos freelance y oportunidades a tiempo completo.
        </p>
        <Button client:load variant="default" size="lg">Contáctame</Button>
      </div>
    </section>
  </main>
</Layout>

<style>
  .glitch-text {
    position: relative;
    text-shadow: 0.05em 0 0 rgba(255, 0, 0, 0.75),
                -0.025em -0.05em 0 rgba(0, 255, 0, 0.75),
                0.025em 0.05em 0 rgba(0, 0, 255, 0.75);
    animation: glitch 2s infinite;
  }

  @keyframes glitch {
    0% {
      text-shadow: 0.05em 0 0 rgba(255, 0, 0, 0.75),
                  -0.025em -0.05em 0 rgba(0, 255, 0, 0.75),
                  0.025em 0.05em 0 rgba(0, 0, 255, 0.75);
    }
    14% {
      text-shadow: 0.05em 0 0 rgba(255, 0, 0, 0.75),
                  -0.025em -0.05em 0 rgba(0, 255, 0, 0.75),
                  0.025em 0.05em 0 rgba(0, 0, 255, 0.75);
    }
    15% {
      text-shadow: -0.05em -0.025em 0 rgba(255, 0, 0, 0.75),
                  0.025em 0.025em 0 rgba(0, 255, 0, 0.75),
                  -0.05em -0.05em 0 rgba(0, 0, 255, 0.75);
    }
    49% {
      text-shadow: -0.05em -0.025em 0 rgba(255, 0, 0, 0.75),
                  0.025em 0.025em 0 rgba(0, 255, 0, 0.75),
                  -0.05em -0.05em 0 rgba(0, 0, 255, 0.75);
    }
    50% {
      text-shadow: 0.025em 0.05em 0 rgba(255, 0, 0, 0.75),
                  0.05em 0 0 rgba(0, 255, 0, 0.75),
                  0 -0.05em 0 rgba(0, 0, 255, 0.75);
    }
    99% {
      text-shadow: 0.025em 0.05em 0 rgba(255, 0, 0, 0.75),
                  0.05em 0 0 rgba(0, 255, 0, 0.75),
                  0 -0.05em 0 rgba(0, 0, 255, 0.75);
    }
    100% {
      text-shadow: -0.025em 0 0 rgba(255, 0, 0, 0.75),
                  -0.025em -0.025em 0 rgba(0, 255, 0, 0.75),
                  -0.025em -0.05em 0 rgba(0, 0, 255, 0.75);
    }
  }
</style>

